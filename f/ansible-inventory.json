{
  "$id": "https://raw.githubusercontent.com/ansible/schemas/main/f/ansible-inventory.json",
  "$schema": "http://json-schema.org/draft-07/schema",
  "additionalProperties": false,
  "definitions": {
    "group": {
      "properties": {
        "children": {
          "patternProperties": {
            "[a-zA-Z-_0-9]": {
              "$ref": "#/definitions/group"
            }
          }
        },
        "hosts": {
          "patternProperties": {
            "[a-zA-Z.-_0-9]": {
              "type": ["object", "null"]
            }
          },
          "type": ["object", "string"]
        },
        "vars": {
          "type": "object"
        }
      },
      "type": ["object", "null"]
    }
  },
  "description": "Ansible Inventory Schema",
  "examples": [
    "inventory.yaml",
    "inventory.yml",
    "inventory/*.yml",
    "inventory/*.yaml"
  ],
  "properties": {
    "all": {
      "$ref": "#/definitions/group"
    },
    "ungrouped": {
      "$ref": "#/definitions/group"
    }
  },
  "title": "Ansible Inventory Schema",
  "type": "object"
}
