{
  "$schema": "http://json-schema.org/draft-07/schema",
  "additionalProperties": false,
  "definitions": {
    "AnsibleModel": {
      "additionalProperties": false,
      "properties": {
        "cmdline": {
          "description": "Extra parameters passed to the corresponding command",
          "title": "Cmdline",
          "type": "string"
        },
        "config": {
          "title": "Config",
          "type": "string"
        },
        "inventories": {
          "items": {
            "type": "string"
          },
          "title": "Inventories",
          "type": "array"
        },
        "playbook": {
          "title": "Playbook",
          "type": "string"
        }
      },
      "required": [
        "config",
        "inventories",
        "playbook"
      ],
      "title": "AnsibleModel",
      "type": "object"
    },
    "AnsibleNavigatorModel": {
      "additionalProperties": false,
      "properties": {
        "ansible": {
          "$ref": "#/definitions/AnsibleModel"
        },
        "ansible-runner": {
          "$ref": "#/definitions/AnsibleRunnerModel"
        },
        "app": {
          "default": "welcome",
          "description": "Subcommands",
          "enum": [
            "collections",
            "config",
            "doc",
            "exec",
            "images",
            "inventory",
            "replay",
            "run",
            "welcome"
          ],
          "title": "App",
          "type": "string"
        },
        "collection-doc-cache-path": {
          "default": "$HOME/.cache/ansible-navigator/collection_doc_cache.db",
          "description": "The path to collection doc cache",
          "title": "Collection-Doc-Cache-Path",
          "type": "string"
        },
        "color": {
          "$ref": "#/definitions/ColorModel"
        },
        "documentation": {
          "$ref": "#/definitions/DocumentationModel"
        },
        "editor": {
          "$ref": "#/definitions/EditorModel"
        },
        "exec": {
          "$ref": "#/definitions/ExecModel"
        },
        "execution-environment": {
          "$ref": "#/definitions/ExecutionEnvironmentModel"
        },
        "help-config": {
          "title": "Help-Config",
          "type": "boolean"
        },
        "help-doc": {
          "title": "Help-Doc",
          "type": "boolean"
        },
        "help-inventory": {
          "title": "Help-Inventory",
          "type": "boolean"
        },
        "help-playbook": {
          "title": "Help-Playbook",
          "type": "boolean"
        },
        "inventory-columns": {
          "items": {
            "type": "string"
          },
          "title": "Inventory-Columns",
          "type": "array"
        },
        "logging": {
          "$ref": "#/definitions/LoggingModel"
        },
        "mode": {
          "title": "Mode",
          "type": "string"
        },
        "playbook-artifact": {
          "$ref": "#/definitions/PlaybookArtifactModel"
        }
      },
      "required": [
        "ansible",
        "ansible-runner",
        "color",
        "documentation",
        "editor",
        "exec",
        "execution-environment",
        "inventory-columns",
        "logging",
        "mode",
        "playbook-artifact"
      ],
      "title": "AnsibleNavigatorModel",
      "type": "object"
    },
    "AnsibleRunnerModel": {
      "additionalProperties": false,
      "properties": {
        "artifact-dir": {
          "description": "The directory path to store artifacts generated by ansible-runner",
          "title": "Artifact-Dir",
          "type": "string"
        },
        "rotate-artifacts-count": {
          "description": "Keep ansible-runner artifact directories, for last n runs, if set to 0 artifact directories won\u2019t be deleted",
          "title": "Rotate-Artifacts-Count",
          "type": "integer"
        },
        "timeout": {
          "description": "The timeout value after which ansible-runner willforce stop the execution",
          "title": "Timeout",
          "type": "integer"
        }
      },
      "title": "AnsibleRunnerModel",
      "type": "object"
    },
    "ColorModel": {
      "additionalProperties": false,
      "properties": {
        "enable": {
          "title": "Enable",
          "type": "boolean"
        },
        "osc4": {
          "title": "Osc4",
          "type": "boolean"
        }
      },
      "required": [
        "enable",
        "osc4"
      ],
      "title": "ColorModel",
      "type": "object"
    },
    "DocumentationModel": {
      "additionalProperties": false,
      "properties": {
        "plugin": {
          "$ref": "#/definitions/PluginModel"
        }
      },
      "required": [
        "plugin"
      ],
      "title": "DocumentationModel",
      "type": "object"
    },
    "EditorModel": {
      "additionalProperties": false,
      "properties": {
        "command": {
          "title": "Command",
          "type": "string"
        },
        "console": {
          "title": "Console",
          "type": "boolean"
        }
      },
      "required": [
        "command"
      ],
      "title": "EditorModel",
      "type": "object"
    },
    "EnvironmentVariablesModel": {
      "additionalProperties": false,
      "properties": {
        "pass": {
          "items": {
            "type": "string"
          },
          "title": "Pass",
          "type": "array"
        },
        "set": {
          "additionalProperties": {
            "type": "string"
          },
          "title": "Set",
          "type": "object"
        }
      },
      "required": [
        "pass"
      ],
      "title": "EnvironmentVariablesModel",
      "type": "object"
    },
    "ExecModel": {
      "additionalProperties": false,
      "properties": {
        "command": {
          "title": "Command",
          "type": "string"
        },
        "shell": {
          "title": "Shell",
          "type": "boolean"
        }
      },
      "required": [
        "command"
      ],
      "title": "ExecModel",
      "type": "object"
    },
    "ExecutionEnvironmentModel": {
      "additionalProperties": false,
      "properties": {
        "container-engine": {
          "default": "auto",
          "description": "Specify the container engine (auto=podman then docker)",
          "enum": [
            "auto",
            "podman",
            "docker"
          ],
          "title": "Container-Engine",
          "type": "string"
        },
        "container-options": {
          "items": {
            "type": "string"
          },
          "title": "Container-Options",
          "type": "array"
        },
        "enabled": {
          "title": "Enabled",
          "type": "boolean"
        },
        "environment-variables": {
          "$ref": "#/definitions/EnvironmentVariablesModel"
        },
        "image": {
          "title": "Image",
          "type": "string"
        },
        "pull-policy": {
          "title": "Pull-Policy",
          "type": "string"
        },
        "volume-mounts": {
          "items": {
            "$ref": "#/definitions/VolumeMountsModel"
          },
          "title": "Volume-Mounts",
          "type": "array"
        }
      },
      "required": [
        "enabled",
        "environment-variables",
        "image",
        "pull-policy",
        "volume-mounts",
        "container-options"
      ],
      "title": "ExecutionEnvironmentModel",
      "type": "object"
    },
    "LoggingModel": {
      "additionalProperties": false,
      "properties": {
        "append": {
          "title": "Append",
          "type": "boolean"
        },
        "file": {
          "title": "File",
          "type": "string"
        },
        "level": {
          "title": "Level",
          "type": "string"
        }
      },
      "required": [
        "level",
        "file"
      ],
      "title": "LoggingModel",
      "type": "object"
    },
    "PlaybookArtifactModel": {
      "additionalProperties": false,
      "properties": {
        "enable": {
          "title": "Enable",
          "type": "boolean"
        },
        "replay": {
          "title": "Replay",
          "type": "string"
        },
        "save-as": {
          "title": "Save-As",
          "type": "string"
        }
      },
      "required": [
        "enable",
        "replay",
        "save-as"
      ],
      "title": "PlaybookArtifactModel",
      "type": "object"
    },
    "PluginModel": {
      "additionalProperties": false,
      "properties": {
        "name": {
          "title": "Name",
          "type": "string"
        },
        "type": {
          "title": "Type",
          "type": "string"
        }
      },
      "required": [
        "name",
        "type"
      ],
      "title": "PluginModel",
      "type": "object"
    },
    "VolumeMountsModel": {
      "additionalProperties": false,
      "properties": {
        "dest": {
          "title": "Dest",
          "type": "string"
        },
        "label": {
          "title": "Label",
          "type": "string"
        },
        "src": {
          "title": "Src",
          "type": "string"
        }
      },
      "required": [
        "src",
        "dest",
        "label"
      ],
      "title": "VolumeMountsModel",
      "type": "object"
    }
  },
  "examples": [
    "ansible-navigator.yml"
  ],
  "properties": {
    "ansible-navigator": {
      "$ref": "#/definitions/AnsibleNavigatorModel"
    }
  },
  "required": [
    "ansible-navigator"
  ],
  "title": "Ansible-Navigator Configuration Schema",
  "type": "object"
}
