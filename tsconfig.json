{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"declaration": true,
		"esModuleInterop": true,
		"stripInternal": true,
		"outDir": "../lib/umd",
		"resolveJsonModule": true,
		"lib": [
			"es5",
			"es2015.promise"
		],
		"strict": true
	},
	"include": ["src/**/*"],
	"exclude": [
      "node_modules",
   ]
}
